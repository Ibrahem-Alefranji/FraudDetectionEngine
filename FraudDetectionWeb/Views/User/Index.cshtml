@using FraudDetectionWeb.Models
@using FraudDetectionWeb.DTOs
@model IEnumerable<TransactionsResponse>
@{
    ViewData["Title"] = "Users Managment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex flex-column-fluid">
    <div class="container">

        <div class="card card-custom">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">@ViewData["Title"]</h3>
                </div>
                <div class="card-toolbar">
                    <a href="/User/Create" class="btn btn-primary font-weight-bolder">
                        <span class="svg-icon svg-icon-md">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <rect x="0" y="0" width="24" height="24" />
                                    <circle fill="#000000" cx="9" cy="15" r="6" />
                                    <path d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z" fill="#000000" opacity="0.3" />
                                </g>
                            </svg>
                        </span>	New User
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input id="search" type="text" class="form-control" placeholder="Search..." />
                        </div>
                        <div class="col-md-3">
                            <select class="form-control" id="Country" name="Country">
                                <option value="">Country</option>
                                <option value="Palestinian">Palestinian</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-control" id="Region" name="Region">
                                <option value="">Region</option>
                                <option value="WestBank">West bank </option>
                                <option value="GazaStrip">Gaza strip </option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button id="btnSearch" type="button" class="btn btn-primary">Search</button>
                        </div>
                    </div>

                    <table id="transactionsTable" class="table table-striped">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Country</th>
                                <th>Region</th>
                                <th>Is Admin</th>
                                <th>Created On</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- DataTables will insert rows here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
@* <script src="https://cdn.datatables.net/2.3.0/js/dataTables.js"></script> *@
<script>
    $(document).ready(function () {
        var table = $('#transactionsTable').DataTable({
            ordering: false,
            searching: false,
            ordering: {
                handler: false
            },
            searchDelay: 500,
            processing: true,
            serverSide: true,
            ajax: {
                url: '/User/LoadData',
                data: function (d) {
                    d.search = $('#search').val();
                    d.region = $('#Region').val();
                    d.type = $('#filterType').val();
                }
            },
            columns: [
                { data: 'fullName' },
                { data: 'username' },
                { data: 'email' },
                { data: 'phoneNumber' },
                { data: 'country' },
                { data: 'region' },
                { data: 'isAdmin' },
                {
                    data: 'createdOn', render: function (data) {
                        return new Date(data).toLocaleDateString();
                    }
                }, 
                {
                    data: 'id', render: function (data) {
                        return `<a href="/User/Update/${data}" class="btn btn-light-primary btn-sm">Edit</a>
                                <a href="/User/Delete/${data}" onclick="return confirm('Are you sure to delete?');" class="btn btn-light-danger btn-sm">Delete</a>`;
                    }
                   
                }
            ],
            columnDefs: [
                {
                    orderable: false,
                    targets: [0,1,2,3,4,5,6,7,-1]
                }
            ]
        });

        // 🔍 Trigger reload on search button click
        $('#btnSearch').on('click', function (e) {
            e.preventDefault();
            table.ajax.reload();
        });
    });
</script>
