@using FraudDetectionWeb.Models
@model IEnumerable<Subscription>
@{
	ViewData["Title"] = "Subscription";
}

<div class="d-flex flex-column-fluid">
	<div class="container">
		<div class="card card-custom">
			<div class="card-header flex-wrap border-0 pt-6 pb-0">
				<div class="card-title">
					<h3 class="card-label">
						@ViewData["Title"]
						@* <span class="d-block text-muted pt-2 font-size-sm">Initialized from remote json file</span> *@
					</h3>
				</div>
				<div class="card-toolbar">
					<a href="/Subscription/Create" class="btn btn-primary font-weight-bolder">
						<span class="svg-icon svg-icon-md">
							<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
								<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
									<rect x="0" y="0" width="24" height="24" />
									<circle fill="#000000" cx="9" cy="15" r="6" />
									<path d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z" fill="#000000" opacity="0.3" />
								</g>
							</svg>
						</span>	New Subscription
					</a>
				</div>
			</div>
			<div class="card-body">
				<div class="mb-7">
					<form action="/Subscription/Index" method="get" class="row align-items-center">
						<div class="col-lg-9 col-xl-8">
							<div class="row align-items-center">
								<div class="col-md-4 my-2 my-md-0">
									<div class="input-icon">
										<input name="Query" type="text" class="form-control" placeholder="Search..." />
										<span><i class="flaticon2-search-1 text-muted"></i></span>
									</div>
								</div>

								<div class="col-md-4 my-2 my-md-0">
									<div class="d-flex align-items-center">
										<label class="mr-3 mb-0 d-none d-md-block">Country:</label>
										<select class="form-control" name="Country">
											<option value="">All</option>
											<option value="Palestinian">Palestinian</option>
										</select>
									</div>
								</div>
								<div class="col-md-4 my-2 my-md-0">
									<div class="d-flex align-items-center">
										<label class="mr-3 mb-0 d-none d-md-block">Region:</label>
										<select name="Region" class="form-control">
											<option value="">All</option>
											<option value="WestBank">West bank </option>
											<option value="GazaStrip">Gaza strip </option>
										</select>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-3 col-xl-4 mt-5 mt-lg-0">
							<button type="submit" class="btn btn-light-primary px-6 font-weight-bold">
								Search
							</button>
						</div>
					</form>
				</div>
				<div class="">
					<table class="table table-striped">
						<thead>
							<tr class="datatable-row">
								<th>Full Name</th>
								<th>Business Name</th>
								<th>Phone</th>
								<th>Email</th>
								<th>Country</th>
								<th>Expiration Date</th>
								<th>Created On</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							@if(Model != null)
							{
								foreach(var item in Model)
								{
									<tr>
										<td>@item.FullName</td>
										<td>@item.BusinessName</td>
										<td>@item.Phone</td>
										<td>@item.Email</td>
										<td>@item.Country</td>
										<td>@item.ExpirationDate.ToShortDateString()</td>
										<td>@item.CreatedOn.Date.ToShortDateString()</td>
										<td>
											<a href="/Subscription/Update/@item.Id" class="btn btn-light-primary btn-sm">Edit</a>
											<a href="/Subscription/Delete/@item.Id" onclick="return confirm('Are you sure to delete?');" class="btn btn-light-danger btn-sm">Delete</a>
										</td>
									</tr>
								}
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
