@using FraudDetectionWeb.Models
@using FraudDetectionWeb.DTOs
@model IEnumerable<TransactionsResponse>
@{
    ViewData["Title"] = "Payment Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex flex-column-fluid">
    <div class="container">

        <div class="card card-custom">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input id="globalSearch" type="text" class="form-control" placeholder="Search..." />
                        </div>
                        <div class="col-md-3">
                            <input id="Amount" type="text" class="form-control" placeholder="Search Amount" />
                        </div>
                        <div class="col-md-3">
                            <select id="filterType" class="form-control">
                                <option value="">Transaction Type</option>
                                <option value="1">Purchase</option>
                                <option value="2">Return</option>
                                <!-- etc. -->
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button id="btnSearch" type="button" class="btn btn-primary">Search</button>
                        </div>
                    </div>

                    <table id="transactionsTable" class="table table-striped">
                        <thead>
                            <tr>
                                <th>Order Id</th>
                                <th>Subscribe</th>
                                <th>Amount</th>
                                <th>Transaction Type</th>
                                <th>Location</th>
                                <th>IPAddress</th>
                                <th>Source</th>
                                <th>Created On</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- DataTables will insert rows here -->
                        </tbody>
                    </table>
                </div>
            </div>
            </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
@* <script src="https://cdn.datatables.net/2.3.0/js/dataTables.js"></script> *@
<script>
    $(document).ready(function () {
        var table = $('#transactionsTable').DataTable({
            ordering: false,
            searching: false,
            ordering: {
                handler: false
            },
            searchDelay: 500,
            processing: true,
            serverSide: true,
            ajax: {
                url: '/Transactions/LoadData',
                data: function (d) {
                    d.search = $('#globalSearch').val();
                    d.amount = $('#Amount').val();
                    d.type = $('#filterType').val();
                }
            },
            columns: [
                { data: 'orderId' },
                { data: 'businessName' },
                { data: 'amount' },
                { data: 'transactionTypeText' },
                { data: 'location' },
                { data: 'ipAddress' },
                { data: 'source' },
                {
                    data: 'createdOn', render: function (data) {
                        return new Date(data).toLocaleDateString();
                    }
                }
            ],
            columnDefs: [
                {
                    orderable: false,
                    targets: [-1]
                }
            ]
        });

        // 🔍 Trigger reload on search button click
        $('#btnSearch').on('click', function (e) {
            e.preventDefault();
            table.ajax.reload();
        });
    });
</script>
